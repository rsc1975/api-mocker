#!/usr/bin/env node
'use strict';

const path = require("path");
const { readdirSync, rmSync, writeFileSync, mkdirSync } = require('fs');
const { fileExistsSync } = require("tsconfig-paths/lib/filesystem");

const distDir = path.join(__dirname, "..", "dist");
if (fileExistsSync(distDir)) {
    readdirSync(distDir).forEach(f => rmSync(`${distDir}/${f}`, { recursive: true }));
} else {
    mkdirSync(distDir);
}

const pkg = require(path.join(__dirname, "..", "package.json"));

pkg.scripts = {
    "prepack": "copyfiles ../src/**/*.* ../bin/api* ../examples/**/* ./dist"
};
delete pkg.files;
delete pkg.devDependencies;
delete pkg.dependencies;
pkg.main = "./api-mockr.min.js";


writeFileSync("dist/package.json", JSON.stringify(pkg, null, 2));